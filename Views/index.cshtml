@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-2">
    <div class="btn-group-vertical">
      <form action="/contacts/new" method="get">
        <button type="submit" class="btn btn-default">Add a Contact</button>
      </form>
      <form action="/contacts/delete" method="post">
        <button type="submit" class="btn btn-default">Delete All Contacts</button>
      </form>
    </div>
  </div>
  <div class="col-md-10">
    @if (Model.Count > 0) {
      <ul>
      @foreach(var contact in Model)
      {
        <li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li>
      }
      </ul>
    } else {
      <h3>To start using the app, click one of the buttons at left!</h3>
    }
  </div>
</div>
