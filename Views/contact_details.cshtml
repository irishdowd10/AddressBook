@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-md-2">
    <div class="btn-group-vertical">
      <form action="/contacts/new" method="get">
        <button type="submit" class="btn btn-default">Add a Contact</button>
      </form>
      <form action="/contacts/clear" method="post">
        <button type="submit" class="btn btn-default">Clear All Contacts</button>
      </form>
    </div>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">@Model.GetName()</h3>
      </div>
      <div class="panel-body">
        <p> Phone: @Model.GetPhone(), Address: @Model.GetAddress()</p>
      </div>
    </div>
  </div>
</div>
